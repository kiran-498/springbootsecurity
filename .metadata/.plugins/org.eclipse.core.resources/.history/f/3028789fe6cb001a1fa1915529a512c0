spring.datasource.url=jdbc:sqlserver://localhost;databaseName=oauth2_database
spring.datasource.username=sa
spring.datasource.password=root
spring.datasource.driverClassName=com.microsoft.sqlserver.jdbc.SQLServerDriver
spring.jpa.show-sql=true
spring.jpa.hibernate.dialect=org.hibernate.dialect.SQLServer2012Dialect
spring.jpa.hibernate.ddl-auto = update

spring.jpa.hibernate.default_schema=dbo

security.oauth2.client.clientId=USER_CLIENT_APP
security.oauth2.client.clientSecret=password
security.oauth2.client.accessTokenUri=http://localhost:8089/oauth/token
security.oauth2.client.userAuthorizationUri=http://localhost:8089/oauth/authorize
security.oauth2.client.grantType=password
security.oauth2.client.tokenName  =   access_token

check-user-scopes: true